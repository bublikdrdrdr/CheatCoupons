<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    Widget.AppCompat.Button.Borderless-->
    <style name="AppTheme.ToolbarButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:minWidth">20dp</item>
    </style>

    <style name="AppTheme.PDFViever" parent="AppTheme">
        <item name="android:toolbarStyle">@style/Widget.MaterialComponents.AppBarLayout.Primary</item>
    </style>

    <style name="PropertyField">
        <item name="android:paddingTop">@dimen/property_field_padding</item>
        <item name="android:paddingStart">@dimen/property_field_padding</item>
        <item name="android:paddingEnd">@dimen/property_field_padding</item>
        <item name="android:textViewStyle">@style/PropertyField.TextView</item>
    </style>

    <style name="PropertyField.TextView" parent="android:style/Widget.Material.TextView">
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">-8dp</item>
    </style>
</resources>
